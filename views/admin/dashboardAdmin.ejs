// Function to render the chart
function renderGraph(categories, salesData, profitData) {
  const options = {
    dataLabels: {
      enabled: true,
      style: {
        cssClass: 'text-xs text-white font-medium',
      },
    },
    grid: {
      show: false,
      strokeDashArray: 4,
      padding: {
        left: 16,
