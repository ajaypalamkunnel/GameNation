<%- include('header') %>

<div class="flex flex-col md:flex-row min-h-screen">

    <!-- Sidebar Section (1/4 of the width) -->
    <div class="w-full bg-gray-700 md:w-1/4">
        <%- include('sidebar') %>
    </div>

    <!-- Main Content Section (3/4 of the width) -->
    <div class="w-full bg-gray-700 md:w-3/4 flex-grow p-4">
        <div class="bg-gray-800 max-w-4xl mx-auto rounded-lg shadow-lg p-8">
            <!-- Left Profile Section -->
            <div class="flex flex-col md:flex-row bg-gray-800 text-white rounded-lg">
                <div class="md:w-1/3 flex flex-col items-center justify-center p-8">
                    <!-- Profile Picture -->
                    <div class="bg-white w-32 h-32 rounded-full flex items-center justify-center mb-4">
                        <i class="bi bi-person-fill text-gray-800 text-6xl"></i>
                    </div>
                    <!-- User Info -->
                    <h2 class="text-xl font-bold"><%=userProfile.username%></h2>
                    <p class="text-sm mt-1"><%=userProfile.email%></p>
                    <!-- <p class="text-sm mt-1 text-center">Sulthan Bathery, Wayanad,<br>Poomala P O</p> -->
                    <!-- Edit Profile Link -->
                    <a href="#" class="mt-4 text-blue-300 hover:text-blue-400 text-sm">Edit Profile Picture</a>
                </div>

                <!-- Right Form Section -->
                <div class="md:w-2/3 bg-gray-100 p-8 rounded-b-lg md:rounded-r-lg md:rounded-bl-none">
                    <!-- Form Heading -->
                    <h2 class="text-lg font-semibold text-gray-800 mb-6">Edit Your Profile</h2>

                    <!-- Edit Profile Form -->
                    <form action="#" method="POST">
                        <!-- Name Fields -->
                        <div class="flex flex-col md:flex-row md:space-x-4">
                            <div class="w-full mb-4">
                                <label for="firstName" class="block text-gray-600 text-sm">UserName</label>
                                <input type="text" id="Username" value="<%=userProfile.username%>" class="w-full mt-1 p-2 border border-gray-300 text-black rounded-md focus:outline-none focus:ring-2 focus:ring-green-500">
                            </div>
                            <div class="w-full mb-4">
                                <label for="lastName" class="block text-gray-600 text-sm">Phone</label>
                                <input type="number" id="lastName" value="" class="w-full mt-1 p-2 border text-black border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500">
                            </div>
                        </div>

                        <!-- Email and Address Fields -->
                        <div class="flex flex-col md:flex-row md:space-x-4">
                            <div class="w-full mb-4">
                                <label for="email" class="block text-gray-600 text-sm">Email</label>
                                <input type="email" id="email" value="<%=userProfile.email%>" class="w-full mt-1 p-2 border text-black border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500">
                            </div>
                            
                        </div>

                        <!-- Password Change Section -->
