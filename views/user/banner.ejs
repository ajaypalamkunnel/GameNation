
<div class="w-full bg-[#121212] py-8">
    <div class="max-w-6xl mx-auto px-4 relative">
      <!-- Carousel Container -->
       
      <div class="carousel p-2 w-full h-64 overflow-hidden relative">
        <div class="flex  transition-transform ease-in-out duration-1000" id="carousel-content">
          <div class="w-full p-6 flex-shrink-0 h-64 bg-cover bg-center mx-2" style="background-image: url('/images/b1.jpeg')"></div>
          <div class="w-full p-6 flex-shrink-0 h-64 bg-cover bg-center mx-2" style="background-image: url('/images/b1.jpeg')"></div>
          <div class="w-full p-6 flex-shrink-0 h-64 bg-cover bg-center mx-2" style="background-image: url('/images/b1.jpeg')"></div>
        </div>
      </div>
    </div>
  </div>
  
  <script>
    const carouselContent = document.getElementById('carousel-content');
    let index = 0;
    setInterval(() => {
      index = (index + 1) % 3; // Loop through 3 banners
      carouselContent.style.transform = `translateX(-${index * 100}%)`;
    }, 3000); // 2 seconds interval
  </script>
  