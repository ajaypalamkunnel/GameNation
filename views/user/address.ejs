<%- include('header') %>

<div class="flex flex-col md:flex-row min-h-screen">

    <!-- Sidebar Section (1/4 of the width) -->
    <div class="w-full bg-gray-700 md:w-1/4">
        <%- include('sidebar') %>
    </div>

    <!-- Main Content Section (3/4 of the width) -->
    <div class="w-full bg-gray-700 md:w-3/4 flex-grow p-4">
        <div class="bg-gray-900 min-h-screen p-4">
            <!-- Address Header -->
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-lg font-semibold text-white">Address</h2>
                <a class="bg-green-500 text-white py-2 px-4 rounded-lg hover:bg-green-600 focus:outline-none" href="/addNewAddress">Add new</a>
                    
                
            </div>
        
            <!-- Address Card 1 -->
             <% addresses.forEach((address)=>{ %>
            <div class="bg-gray-800 p-4 rounded-lg mb-4 flex justify-between items-center">
                <div class="text-white">
                    <p><%= address.contactName  %>,</p>
                    <p><%= address.building %></p>
                    <p>Landmark :  <%= address.landmark %>,</p>
                    <p><%= address.city %> - <%= address.pincode %>,</p>
                    <p><%= address.district %>, <%= address.state %>.</p>
                    <p>Mobile: <%= address.phonenumber %></p>
                  
                </div>
                <!-- Edit-->
                
                <div class="flex space-x-4">
                    <a href="/editAddress/<%= address._id %>" class="text-green-400 hover:text-green-500 focus:outline-none"><i class="bi bi-pencil-square text-2xl"></i></a>
                   <!-- Delete Icons  -->
                   <a href="#" data-id="<%= address._id %>" class="delete-btn text-red-500 hover:text-red-600 focus:outline-none">
                    <i class="bi bi-trash-fill text-2xl"></i>
                </a>
                </div>
            </div>

            <!-- Modal (Hidden by default) -->

            <% }) %>

            <div id="deleteModal" class="hidden fixed inset-0 p-4 flex flex-wrap justify-center items-center w-full h-full z-[1000] before:fixed before:inset-0 before:w-full before:h-full before:bg-[rgba(0,0,0,0.5)] overflow-auto font-[sans-serif]">
                <div class="w-full max-w-lg bg-white shadow-lg rounded-lg p-6 relative">
                    <svg id="closeModal" xmlns="http://www.w3.org/2000/svg"
                        class="w-3.5 cursor-pointer shrink-0 fill-gray-400 hover:fill-red-500 float-right" viewBox="0 0 320.591 320.591">
                        <path
                            d="M30.391 318.583a30.37 30.37 0 0 1-21.56-7.288c-11.774-11.844-11.774-30.973 0-42.817L266.643 10.665c12.246-11.459 31.462-10.822 42.921 1.424 10.362 11.074 10.966 28.095 1.414 39.875L51.647 311.295a30.366 30.366 0 0 1-21.256 7.288z"
                            data-original="#000000"></path>
                        <path
                            d="M287.9 318.583a30.37 30.37 0 0 1-21.257-8.806L8.83 51.963C-2.078 39.225-.595 20.055 12.143 9.146c11.369-9.736 28.136-9.736 39.504 0l259.331 257.813c12.243 11.462 12.876 30.679 1.414 42.922-.456.487-.927.958-1.414 1.414a30.368 30.368 0 0 1-23.078 7.288z"
                            data-original="#000000"></path>
                    </svg>
            
                    <div class="my-4 text-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-14 fill-red-500 inline" viewBox="0 0 24 24">
                            <path
                                d="M19 7a1 1 0 0 0-1 1v11.191A1.92 1.92 0 0 1 15.99 21H8.01A1.92 1.92 0 0 1 6 19.191V8a1 1 0 0 0-2 0v11.191A3.918 3.918 0 0 0 8.01 23h7.98A3.918 3.918 0 0 0 20 19.191V8a1 1 0 0 0-1-1Zm1-3h-4V2a1 1 0 0 0-1-1H9a1 1 0 0 0-1 1v2H4a1 1 0 0 0 0 2h16a1 1 0 0 0 0-2ZM10 4V3h4v1Z"
                                data-original="#000000" />
                            <path d="M11 17v-7a1 1 0 0 0-2 0v7a1 1 0 0 0 2 0Zm4 0v-7a1 1 0 0 0-2 0v7a1 1 0 0 0 2 0Z"
                                data-original="#000000" />
                        </svg>
                        <h4 class="text-gray-800 text-base font-semibold mt-4">Are you sure you want to delete it?</h4>
            
                        <div class="text-center space-x-4 mt-8">
                            <button id="cancelButton" type="button" class="px-4 py-2 rounded-lg text-gray-800 text-sm bg-gray-200 hover:bg-gray-300 active:bg-gray-200">Cancel</button>
                            <button id="confirmDelete" type="button" class="px-4 py-2 rounded-lg text-white text-sm bg-red-600 hover:bg-red-700 active:bg-red-600">Delete</button>
                        </div>
                    </div>
                </div>
            </div>
            


        
                                                                                                                                                                                                                                                                   
           
        
        <!-- Add Bootstrap Icons -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
        

    </div>

</div>

<script>

    document.addEventListener('DOMContentLoaded', function () {
    const deleteButtons = document.querySelectorAll('.delete-btn');
    const modal = document.getElementById('deleteModal');
    const closeModal = document.getElementById('closeModal');
    const cancelButton = document.getElementById('cancelButton');
    const confirmDelete = document.getElementById('confirmDelete');
    let addressIdToDelete;

    // Show the modal when delete button is clicked
    deleteButtons.forEach(button => {
        button.addEventListener('click', (event) => {
            event.preventDefault();
            addressIdToDelete = button.getAttribute('data-id'); // Store the address ID to delete
            modal.classList.remove('hidden'); // Show modal
        });
    });

    // Close modal when cancel or close button is clicked
    closeModal.addEventListener('click', () => {
        modal.classList.add('hidden');
    });
    cancelButton.addEventListener('click', () => {
        modal.classList.add('hidden');
    });

    // Handle delete confirmation
    confirmDelete.addEventListener('click', async () => {
        console.log("confirmDelete=====",addressIdToDelete);
        
        try {
            const response = await fetch(`/deleteAddress/${addressIdToDelete}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                }
            });

            if (response.ok) {
                // Remove the address from the DOM
                console.log("-----------deleted success");
                
                modal.classList.add('hidden'); // Close the modal after delete
                //alert('Address deleted successfully!');
                window.location.href = '/address';
            } else {
                console.error('Failed to delete address');
            }
        } catch (error) {
            console.error('Error:', error);
        }
    });
});




</script>